@model IEnumerable<TimeTracking.Models.DailyWork>
@{
    ViewData["Title"] = "Отчеты пользователя";
}

<a asp-action="CreateReport" asp-route-userid="@ViewData["UserID"]"><img src="/img/list.png" height="30" width="30" alt="Картинка добавления пользователя(404)" /></a>
<table border="1" width="100%" height="100%">
    <tr>
        <th>Примечание</th>
        <th>Время работы</th>
        <th>Дата</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Note</td>
            <td>@item.Hour</td>
            <td>@item.Date.Day.@item.Date.Month.@item.Date.Year</td>

            <td>
                <a asp-action="EditReport" asp-controller="Home" asp-route-id="@item.ID">
                    <img src="https://img.icons8.com/metro/452/edit.png" width="25" height="25" />
                </a>
                <a asp-action="DeleteReport" asp-controller="Home" asp-route-id="@item.ID">
                    <img src="http://simpleicon.com/wp-content/uploads/trash.png" width="30" height="30" />
                </a>
            </td>

        </tr>
    }

</table>
